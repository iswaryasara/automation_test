pipeline {
    agent any

   

    parameters {
        string(name: 'BOOK_TAGS', defaultValue: '@book', description: 'Tags to run')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/iswaryasara/automation_test.git'
            }
        }

        stage('Run Cucumber Tests') {
            steps {
                bat "mvn clean test -Dcucumber.filter.tags=${params.BOOK_TAGS}"
            }
        }
    }

    post {
        always {
            junit '/target/surefire-reports/*.xml'
        }
    }
}